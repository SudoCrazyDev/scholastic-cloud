{
  "extends": "@adonisjs/core/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@shared/*": ["../shared/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "../shared/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "tmp"
  ]
} 